<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ID Update - E-Gov Portal</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">

  <!-- Navbar -->
  <header class="bg-purple-700 text-white shadow-md">
    <div class="max-w-5xl mx-auto flex justify-between items-center p-4">
      <h2 class="text-xl font-bold">E-Gov Portal</h2>
      <nav class="space-x-4">
        <a href="/" class="hover:underline">Home</a>
        <a href="/services" class="hover:underline">Services</a>
      </nav>
    </div>
  </header>

  <!-- Form Section -->
  <section class="max-w-2xl mx-auto mt-10 bg-white p-8 rounded-xl shadow-lg">
    <h1 class="text-2xl font-semibold mb-6 text-gray-800">Update ID Information</h1>

    <!-- Message Box -->
    <div id="message" class="hidden mb-4 p-3 rounded-lg text-white text-center"></div>

    <!-- Form -->
    <form id="idUpdateForm" class="space-y-5">

      <div>
        <label for="fullname" class="block text-gray-700 mb-1">Full Name:</label>
        <input type="text" id="fullname" name="fullname"
               class="w-full border border-gray-300 p-2 rounded-md focus:ring-2 focus:ring-purple-500 outline-none">
      </div>

      <div>
        <label for="dob" class="block text-gray-700 mb-1">Date of Birth:</label>
        <input type="date" id="dob" name="dob"
               class="w-full border border-gray-300 p-2 rounded-md focus:ring-2 focus:ring-purple-500 outline-none">
      </div>

      <div>
        <label for="idNumber" class="block text-gray-700 mb-1">ID Number:</label>
        <input type="text" id="idNumber" name="idNumber"
               class="w-full border border-gray-300 p-2 rounded-md focus:ring-2 focus:ring-purple-500 outline-none">
      </div>

      <div>
        <label for="email" class="block text-gray-700 mb-1">Email Address:</label>
        <input type="email" id="email" name="email"
               class="w-full border border-gray-300 p-2 rounded-md focus:ring-2 focus:ring-purple-500 outline-none">
      </div>

      <button type="submit"
              class="w-full bg-purple-600 text-white py-2 rounded-lg shadow-md hover:bg-purple-700 transition">
        Update ID
      </button>
    </form>
  </section>

  <!-- JavaScript Logic -->
  <script>
    const form = document.getElementById('idUpdateForm');
    const messageBox = document.getElementById('message');

    form.addEventListener('submit', function(e) {
      e.preventDefault(); // prevent page reload

      // get field values
      const fullname = form.fullname.value.trim();
      const dob = form.dob.value.trim();
      const idNumber = form.idNumber.value.trim();
      const email = form.email.value.trim();

      // check if fields are empty
      if (!fullname || !dob || !idNumber || !email) {
        showMessage('Oops! Full Name, Date of Birth, ID Number, and Email are required.', 'bg-red-500');
      } else {
        showMessage('âœ… Your ID information has been successfully updated!', 'bg-green-500');
        form.reset(); // clear form after success
      }
    });

    // message display function
    function showMessage(text, bgColor) {
      messageBox.textContent = text;
      messageBox.className = `block mb-4 p-3 rounded-lg text-white text-center ${bgColor}`;
      setTimeout(() => {
        messageBox.className = 'hidden'; // hide after 4 seconds
      }, 4000);
    }
  </script>

</body>
</html>

