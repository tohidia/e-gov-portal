<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Passport Application - E-Gov Portal</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 font-sans min-h-screen flex flex-col">

  <!-- Navbar -->
  <header class="bg-blue-900 text-white py-4 shadow-md">
    <div class="max-w-5xl mx-auto flex justify-between items-center px-4">
      <h1 class="text-2xl font-semibold">E-Government Portal</h1>
      <nav class="space-x-4">
        <a href="/" class="hover:underline">Home</a>
        <a href="/services" class="hover:underline">Services</a>
        <a href="/services/passport" class="hover:underline">Passport Application</a>
      </nav>
    </div>
  </header>

  <!-- Main Form -->
  <main class="flex-grow flex justify-center items-center py-10">
    <div class="bg-white/90 backdrop-blur-md w-full max-w-md rounded-xl shadow-lg p-8">
      <h2 class="text-2xl font-bold text-center text-blue-800 mb-6">
        Passport Application
      </h2>

      <form id="passportForm" class="space-y-5">
        <div>
          <label class="block font-medium text-gray-700 mb-1">Full Name</label>
          <input type="text" id="fullName" placeholder="Enter your full name"
                 class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500" />
        </div>

        <div>
          <label class="block font-medium text-gray-700 mb-1">Date of Birth</label>
          <input type="date" id="dob"
                 class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500" />
        </div>

        <div>
          <label class="block font-medium text-gray-700 mb-1">Nationality</label>
          <input type="text" id="nationality" placeholder="e.g. Afghan"
                 class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500" />
        </div>

        <div>
          <label class="block font-medium text-gray-700 mb-1">Email Address</label>
          <input type="email" id="email" placeholder="you@example.com"
                 class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500" />
        </div>

        <button type="submit"
                class="w-full bg-gradient-to-r from-purple-500 to-pink-500 hover:from-pink-500 hover:to-purple-500 text-white font-semibold py-2 rounded-lg transition">
          Submit Application
        </button>
      </form>

      <p id="message" class="mt-4 text-center font-medium"></p>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-blue-900 text-white py-4 text-center mt-auto">
    <p>© 2025 E-Gov Portal — All Rights Reserved.</p>
  </footer>

  <!-- JavaScript -->
  <script>
    const form = document.getElementById("passportForm");
    const message = document.getElementById("message");

    form.addEventListener("submit", (e) => {
      e.preventDefault();

      const fullName = document.getElementById("fullName").value.trim();
      const dob = document.getElementById("dob").value.trim();
      const nationality = document.getElementById("nationality").value.trim();
      const email = document.getElementById("email").value.trim();

      if (!fullName || !dob || !nationality || !email) {
        message.textContent = "❌ Please fill all required fields.";
        message.className = "mt-4 text-center font-medium text-red-600";
      } else {
        message.textContent = "✅ Application submitted successfully!";
        message.className = "mt-4 text-center font-medium text-green-600";
        form.reset();
      }
    });
  </script>

</body>
</html>
