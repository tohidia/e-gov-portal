<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Submit New Request - E-Gov Portal</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans min-h-screen">

  <div class="max-w-2xl mx-auto bg-white p-10 mt-16 rounded-2xl shadow-lg">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Submit New Service Request</h1>

    <form action="/citizen/request" method="POST">
      <!-- Select Service -->
      <div class="mb-5">
        <label for="service_id" class="block mb-2 text-gray-700 font-medium">Select Service:</label>
        <select name="service_id" id="service_id" class="w-full border-gray-300 rounded-lg p-2">
          <% services.forEach(function(service) { %>
            <option value="<%= service.id %>"><%= service.name %></option>
          <% }) %>
        </select>
      </div>

      <!-- Note -->
      <div class="mb-5">
        <label for="note" class="block mb-2 text-gray-700 font-medium">Additional Note:</label>
        <textarea name="note" id="note" rows="4" class="w-full border-gray-300 rounded-lg p-2"></textarea>
      </div>

      <!-- Submit -->
      <button type="submit" 
        class="w-full bg-gradient-to-r from-teal-500 to-blue-500 text-white py-3 rounded-xl shadow-lg hover:scale-105 transition-transform">
        Submit Request
      </button>
    </form>
  </div>

</body>
</html>
